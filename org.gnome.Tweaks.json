                }
            ]
        },
        {
            "name": "libndp",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://libndp.org/files/libndp-1.7.tar.gz",
                    "sha256": "2c480afbffb02792dbae3c13bbfb71d89f735562f2795cca0640ed3428b491b6"
                }
            ]
        },
        {
            "name" : "udev",
            "config-opts" : [
                "--disable-hwdb",
                "--disable-logging",
                "--disable-gudev",
                "--disable-introspection",
                "--disable-keymap",
                "--disable-mtd_probe"
